#include <iostream>

using namespace std;


int UCP(int a)
{
    int ok=1;
    if(a==0)
    {
        return 0;
    }
    else
    {
        
    
    while(a>0)
    {
        if((a%10)%2==0)
        {
            ok=0;
            return a%10;
            break;
            
        }
        a=a/10;
    }
    if(ok==1)
    {
        return -1;
    }
    }
}
